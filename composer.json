{
    "name": "x-graphql/field-guard",
    "description": "Managing access control of object fields",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "symplify/easy-coding-standard": "^12.1"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "XGraphQL\\FieldGuard\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XGraphQL\\FieldGuard\\Test\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.2",
        "webonyx/graphql-php": "^15.9",
        "x-graphql/field-middleware": "^0.1.0"
    },
    "config": {
        "sort-packages": true
    }
}
